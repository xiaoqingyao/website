<?xml version="1.0" encoding="utf-8" ?>
<ValidationTypes>  
  <ValidationType>
    <name>Email</name>    
    <value>2</value>
    <message>你的email输入错误</message>
    <Validation>\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+</Validation>
  </ValidationType>
  <ValidationType>
    <name>固定电话</name> 
    <value>3</value>
    <message>你的电话号码格式有误</message>
    <Validation>\d+</Validation>
  </ValidationType>
</ValidationTypes>