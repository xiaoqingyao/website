<div id="panel"><dl><dt>产品分类</dt><dd><select  id="{#ID#}" name="productclass"><%foreach (object key in ctrManageEdit.FieldBind("K_Types", "TypeName", "TypeId", "").Keys){%><option  <%if(hsFieldValue["productclass"] != null && hsFieldValue["productclass"].ToString().Contains(key.ToString())) {Response.Write("selected='selected'");}%> value="<%= key.ToString()%>"><%=ctrManageEdit.FieldBind("K_Types", "TypeName", "TypeId", "")[key].ToString()%></option> <% } %> </select></dd></dl><dl><dt>产品名称</dt><dd><input  class="validate[optional]"  type="text" value="<%=hsFieldValue["Title"]%>" style="width:180px;"  maxlength="512" name="Title" id="Title" /></dd></dl><dl><dt>新品</dt><dd><input  type="radio" <%if(hsFieldValue["IsNew"] != null && hsFieldValue["IsNew"].ToString().Contains("1")) {Response.Write("checked='checked'");}%>  name="IsNew" value="1" />是<input  type="radio" <%if(hsFieldValue["IsNew"] != null && hsFieldValue["IsNew"].ToString().Contains("0")) {Response.Write("checked='checked'");}%>  name="IsNew" value="0" />否</dd></dl><dl><dt>推荐</dt><dd><input  type="radio" <%if(hsFieldValue["isCommend"] != null && hsFieldValue["isCommend"].ToString().Contains("1")) {Response.Write("checked='checked'");}%>  name="isCommend" value="1" />置推荐<input  type="radio" <%if(hsFieldValue["isCommend"] != null && hsFieldValue["isCommend"].ToString().Contains("0")) {Response.Write("checked='checked'");}%>  name="isCommend" value="0" />不置推荐</dd></dl><dl><dt>产品型号</dt><dd><input  class="validate[optional]"  type="text" value="<%=hsFieldValue["Model"]%>" style="width:300px;"  maxlength="100" name="Model" id="Model" /></dd></dl><dl><dt>产品参数</dt><dd><input   type="text" value="<%=hsFieldValue["pdf"]%>" style="width:300px;"  maxlength="" name="pdf" id="pdf" /> <input type='button' onclick="InputFile('theForm','pdf','file',1,'pdf|rar',40960,'')" value = '上传文件' /></dd></dl><dl><dt>产品说明书</dt><dd><input   type="text" value="<%=hsFieldValue["pdf2"]%>" style="width:300px;"  maxlength="" name="pdf2" id="pdf2" /> <input type='button' onclick="InputFile('theForm','pdf2','file',1,'pdf|rar',40960,'')" value = '上传文件' /></dd></dl><dl><dt>产品图片</dt><dd><input   type="text" value="<%=hsFieldValue["BigImg"]%>" style="width:300px;"  maxlength="" name="BigImg" id="BigImg" /> <input type='button' onclick="InputImages('theForm', 'BigImg', 1, 'jpg|gif|png', 4096, '',285,245)" value = '上传图片' />宽 ： 285 px ， 高 ： 245 px</dd></dl><dl><dt>尺寸图</dt><dd><style  type="text/css">.HQB_MultiFile_ButtonList input{margin-bottom:5px;}</style><table  class="HQB_MultiFile_ButtonList"><tr><td valign="top"><ul style="list-style:none; padding::0; margin:0; "><li style="margin:0; padding:0;margin-bottom:5px;"><input type="hidden" id="drawing" value="<%=hsFieldValue["drawing"]%>" name="drawing" /><select style=" width:300px; height:30px;" name="HQB_MultiFile_drawing" multiple="multiple" id="HQB_MultiFile_drawing" ondblclick="return MultiFileItemModify('HQB_MultiFile_drawing','drawing')" onchange="MultiFileSynchronousHideValue('HQB_MultiFile_drawing','drawing')"></select></li><li style="margin:0; padding:0; display:block;"><input type='button' onclick="InputImages('theForm', 'HQB_MultiFile_drawing', 2, 'jpg|gif|png', 4096, 'drawing',65,55)" value = '上传图片' /></li></ul></td><td valign="top"><input type="button" onclick="MultiFileItemAdd('HQB_MultiFile_drawing','drawing')" value="添加外部地址" /><br /><input type="button" value="修改选中" onclick="MultiFileItemModify('HQB_MultiFile_drawing','drawing')" /><br /><input type="button" value="删除选中" onclick="MultiFileItemDel('HQB_MultiFile_drawing','drawing')"/><br /><input type="button" value="向上移动" onclick="UpOrder('HQB_MultiFile_drawing')" /><br /><input type="button" value="向下移动" onclick="DownOrder('HQB_MultiFile_drawing')" /></td></tr></table><script type="text/javascript">MultiFileInit('HQB_MultiFile_drawing','drawing')</script>宽：200 px  高  ：185 px</dd></dl><dl><dt>产品图片组</dt><dd><style  type="text/css">.HQB_MultiFile_ButtonList input{margin-bottom:5px;}</style><table